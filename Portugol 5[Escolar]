programa
{
	
	funcao inicio()
	{



		cadeia nome, cole
		real nota1, nota2, idade, somamed, resultado
		
		escreva("Qual seu nome? ")
		leia(nome)
		limpa()
		escreva("Qual sua idade? ")
		leia(idade)
		limpa()
		escreva("Qual seu colégio? ")
		leia(cole)
		limpa()
		escreva("Sua primeira nota: ")
		leia(nota1)
		limpa()
		escreva("Sua segunda nota: ")
		leia(nota2)
		limpa()

		somamed=nota1 + nota2
		resultado= somamed / 2

		escreva(
			"Seu nome: ",nome,"\n",
			"Sua idade: ",idade,"\n",
			"Seu colégio: ",cole,"\n",
			"Sua media foi: ",resultado,"\n"
			)
			
			se(resultado < 5){
				escreva("Media abaixo de 5 Vamos estudar mais!!!")
			}
			se(resultado > 5){
				escreva("Media acima de 5 Parabéns!!!")
			}

		


		
	}
}
