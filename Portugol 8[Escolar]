programa
{
	
	funcao inicio()
	{



		cadeia nome
		real n1, n2, idade, resultado, calculo, recu
		
		
		escreva("Nome do aluno: ")
		leia(nome)
		limpa()
		escreva("Sua primeira nota: ")
		leia(n1)
		limpa()
		escreva("Sua segunda nota: ")
		leia(n2)
		limpa()

		calculo=n1 + n2
		resultado= calculo / 2
		recu = resultado - 10
		



			se(resultado < 5){
				escreva("Olá ", nome, " ", "infelizmente você ficou de recuperação por ",recu," ","vamos estudar mais para o proximo bimestre.\n" )
			}
			se(resultado > 5){
				escreva("Parabéns ",nome," ", "sua media foi ",resultado," ", "você passou para o proximo bimestre!\n")
			}
			se(resultado == 5){
				escreva("UFFA!! Foi quase em", nome, "vamos estudar mais para ter uma media melhor, subir essa sua media de ", resultado, " para 7!\n" )
			}

	


	}
}



