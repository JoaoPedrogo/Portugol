programa
{
	inclua biblioteca Calendario
	
	funcao inicio()
	{
	titulo()
	cadastro()
	data()
	}
	funcao titulo(){  
		cadeia comeco

		escreva("Bem vindo\n")
		escreva("Precione qualquer tecla para começar!\n")
		leia(comeco)
		limpa()
	}
	funcao cadastro(){
		cadeia curso, nome, sobrenome, idade, empre
		escreva("Escreva seu Nome: ")
		leia(nome)
		limpa()
		escreva("Escreva seu Sobrenome: ")
		leia(sobrenome)
		limpa()
		escreva("Escreva sua idade: ")
		leia(idade)
		limpa()
		escreva("Qual curso esta exercendo: ")
		leia(curso)
		limpa()
		escreva("Qual seu emprego: ")
		leia(empre)
		limpa()
		escreva("Olá ", nome, " ", sobrenome, " Seja bem vindo(a)\n")
		escreva("Irei informar oque cadastrou!\n")
		escreva("Nome: ", nome,"\n")
		escreva("Sobrenome: ", sobrenome,"\n")
		escreva("Idade: ", idade,"\n")
		escreva("Curso: ", curso,"\n")
		escreva("Emprego: ", empre,"\n")
		data()
	}
	funcao data(){
		inteiro a, b, c, d, d0, d1
		a = Calendario.dia_mes_atual()
		b = Calendario.mes_atual()
		c = Calendario.ano_atual()
		d = Calendario.hora_atual(falso)
		d0 = Calendario.minuto_atual()
		d1 = Calendario.segundo_atual()

		escreva("Data: ", a,"/", b,"/", c, "\n")
		escreva("Horario: ", d,":", d0,":", d1)

	}
}
